    </div>

     <div class="row">
     
{% for recipe in recipes %}
  
        <div class="col-sm-3">
        <div class="mt-5">
        <div class="px-2">
            <div class="card" style="width: 18rem;height:450px;">
                <img src="{{recipe.photo}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ recipe.name }}</h5>
                        <p class="card-text">{{ recipe.comments }}</p>
                        <center><a href="{{ path('recipes_show', {'id': recipe.id}) }}" class="btn btn-primary">voir recettes</a></center>
