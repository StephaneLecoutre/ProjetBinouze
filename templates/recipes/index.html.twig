    {% endblock %}

<nav class="top-right open">
	<a class="disc l1">
		<div>Infos</div>
	</a>
	<a class="disc l2">
		<div>Quizz</div>
	</a>
	<a  href="{{ path('recipes_index') }}"class="disc l3">
