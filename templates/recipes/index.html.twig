{% extends 'base.html.twig' %}

{% block title %}Recipes index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/recipes.css') }}">
   <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}

{% block body %}

 {% block javascripts %}
