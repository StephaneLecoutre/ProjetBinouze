{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <h1>Recipes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ recipe.ingredients }}</td>
            </tr>
            <tr>
                <th>Recipe</th>
                <td>{{ recipe.recipe }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{recipe.photo}}"> </td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ recipe.comments }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipes_index') }}">back to list</a>

    <a href="{{ path('recipes_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipes/_delete_form.html.twig') }}
{% endblock %}
