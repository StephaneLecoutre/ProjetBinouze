{% extends 'base.html.twig' %}

{% block title %}Beers index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/beers.css') }}">
{% endblock %}

{% block body %}
    <div class="section1">
        <h1 class="text-center pageTitle">Nos bières régionales primées</h1>
    </div>

    <div class="jumbotron">
<div class="row">
        <div class="container col-3">
            <h3>Recherchez votre bière</h3>
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.name) }}
                </div>
                <div class="col">
                    {{ form_row(form.type) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.brewery) }}
                </div>
                <div class="col">
                    {{ form_row(form.city) }}
                </div>
            </div>
            <div class="col">
                <button class="btn btn-info">Rechercher</button>
            </div>
            {{ form_end(form) }}
        </div>


        <div class="container col-9">
            <div class="row">

            {% for beer in beers %}

                {% if beer.id is odd %}

                    <div class="col-4">
                        <div class="example-2 card mt-5">
                            <div class="wrapper background1">
                                <div class="header">
                                    <div class="date">
                                        <span class="day">{{ beer.city|upper }}</span>
                                    </div>
                                    <ul class="menu-content">
                                        <li><a href="#" class="fa fa-beer"><span>Tchin!</span></a></li>
                                    </ul>
                                </div>
                                <div class="data">
                                    <div class="content">
                                        <span class="author">{{ beer.type }}</span>
                                        <h1 class="title"><a href="#">{{ beer.name }}</a></h1>
                                        <p class="text">{{ beer.description }}</p>
                                        <a href="#" class="button">En savoir plus</a>
                                        <img src="{{ beer.photo }}" width="150px" height="300px">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% else %}

                    <div class="col-4">
                        <div class="example-2 card mt-5">
                            <div class="wrapper background2">
                                <div class="header">
                                    <div class="date">
                                        <span class="day">{{ beer.city|upper }}</span>
                                    </div>
                                    <ul class="menu-content">
                                        <li><a href="#" class="fa fa-beer"><span>Tchin!</span></a></li>
                                    </ul>
                                </div>
                                <div class="data">
                                    <div class="content">
                                        <span class="author">{{ beer.type }}</span>
                                        <h1 class="title"><a href="#">{{ beer.name }}</a></h1>
                                        <p class="text">{{ beer.description }}</p>
                                        <a href="#" class="button">En savoir plus</a>
                                        <img src="{{ beer.photo }}" width="150px" height="300px">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endif %}

            {% endfor %}


            </div>

    <div class="pagination d-flex justify-content-center mt-5">
        {{ knp_pagination_render(beers) }}
    </div>

    <a href="{{ path('beers_new') }}">Create new</a>
        </div>
</div>
    </div>
{% endblock %}
